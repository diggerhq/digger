# OpenTaco Statesman Configuration
# Copy this file to .env and customize the values below

# Server Configuration
OPENTACO_PORT=8080
OPENTACO_HOST=0.0.0.0

# Storage Configuration
# Options: memory, s3
OPENTACO_STORAGE=memory

# For S3 storage, uncomment and configure:
# OPENTACO_S3_BUCKET=my-opentaco-bucket
# OPENTACO_S3_REGION=us-east-1
# OPENTACO_S3_PREFIX=opentaco/
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# Authentication Configuration  
# Set to 'true' to disable auth (development only)
OPENTACO_AUTH_DISABLE=true

# For OIDC auth, uncomment and configure:
# OPENTACO_AUTH_ISSUER=https://api.workos.com/user_management
# OPENTACO_AUTH_CLIENT_ID=your_workos_client_id

# For Auth0, uncomment and configure:
# OPENTACO_AUTH_ISSUER=https://your-tenant.auth0.com
# OPENTACO_AUTH_CLIENT_ID=your_auth0_client_id

# Logging
OPENTACO_LOG_LEVEL=info

# Docker Image Configuration
# Override the statesman image if needed (e.g., for specific versions)
# STATESMAN_IMAGE=ghcr.io/diggerhq/digger/taco-statesman:v0.1.8
STATESMAN_IMAGE=ghcr.io/diggerhq/digger/taco-statesman:latest
